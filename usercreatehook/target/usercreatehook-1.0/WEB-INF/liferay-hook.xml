<?xml version="1.0"?>
<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.1.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_1_0.dtd">

<hook>
	<portal-properties>portal.properties</portal-properties>

	<language-properties>content/Language.properties</language-properties>
	<language-properties>content/Language_en.properties</language-properties>
	<language-properties>content/Language_sk.properties</language-properties>
	<language-properties>content/Language_cs.properties</language-properties>

	<custom-jsp-dir>/META-INF/custom_jsps</custom-jsp-dir>

	<service>
		<service-type>com.liferay.portal.service.UserLocalService</service-type>
		<service-impl>sk.eea.liferay.cvtilr.hook.service.CustomUserLocalServiceImpl</service-impl>
	</service> 

	<struts-action>
		<struts-action-path>/login/create_account</struts-action-path>
		<struts-action-impl>sk.eea.liferay.cvtilr.hook.CustomCreateAccountAction</struts-action-impl>
	</struts-action>
	
	<struts-action>
		<struts-action-path>/portal/verify_email_address</struts-action-path>
		<struts-action-impl>sk.eea.liferay.cvtilr.hook.CustomVerifyEmailAddressAction</struts-action-impl>
	</struts-action>

</hook>